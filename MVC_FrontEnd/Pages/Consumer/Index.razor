@page "/Consumer"
@inject AuthenticationService authService

<PageTitle>Home</PageTitle>

<link href="css/Dashboard.css" rel="stylesheet" />

<div class="row">

	<div class="col-md-3">
		<div class="card text-white mb-3">
			<div class="card-body">
				<h5 class="card-title">Paid Monthly Bills</h5>
				<p class="card-text fs-2">00</p>
			</div>
		</div>
	</div>

	<div class="col-md-3">
		<div class="card text-white mb-3">
			<div class="card-body">
				<h5 class="card-title">Unpaid Monthly Bills</h5>
				<p class="card-text fs-2">00</p>
			</div>
		</div>
	</div>

	<div class="col-md-3">
		<div class="card text-white mb-3">
			<div class="card-body">
				<h5 class="card-title">Overall Payments</h5>
				<p class="card-text fs-2">00</p>
			</div>
		</div>
	</div>
</div>

@code {

	private bool isAuthenticated = false;

	protected override async Task OnInitializedAsync()
	{
		await authService.CheckAuthenticationAsync();
	}

}
